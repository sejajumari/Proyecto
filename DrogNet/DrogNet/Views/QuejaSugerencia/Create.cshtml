@model DrogNet.Models.QuejaSugerencia

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/css/aos.css" />
<link rel="stylesheet" href="~/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/jquery-ui.css" />
<link rel="stylesheet" href="~/css/magnific-popup.css" />
<link rel="stylesheet" href="~/css/owl.carousel.min.css" />
<link rel="stylesheet" href="~/css/owl.theme.default.min.css" />
<link rel="stylesheet" href="~/css/style.css" />
<link rel="stylesheet" href="~/fonts/icomoon/style.css" />

<hr />
<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="h3 mb-5 text-black">Ponerse en contacto</h2>
            </div>
            <div class="col-md-12">

                <form asp-action="Create">

                    <div class="p-3 p-lg-5 border">
                        <div class="form-group row">
                            <div class="col-md-12">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <label class="text-black">@Html.DisplayNameFor(model => model.Tema)</label>
                                <select asp-for="Tema" class="form-control">
                                    <option value="">Seleccione un Tema</option>
                                    <option value="true">Queja</option>
                                    <option value="false">Sugerencia</option>

                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label asp-for="Descripcion" class="text-black">Descripcion</label>
                                <textarea asp-for="Descripcion" cols="30" rows="7" class="form-control"></textarea>
                                <span asp-validation-for="Descripcion" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label asp-for="Fecha" class="text-black">Fecha</label>
                                <input asp-for="Fecha" type="date" class="form-control">
                                <span asp-validation-for="Fecha" class="text-danger"></span>
                                	<p style="color:red;"  id="e"></p>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-12">
                                <input type="submit" class="btn btn-primary btn-lg btn-block" value="Enviar Mensaje" onclick="validacion()">
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>
        <br>
        <div>
            <a class="btn btn-primary px-5 py-3" asp-controller="Home" asp-action="Index">Volver al inicio</a>
        </div>
    </div>
</div>



<div class="site-section bg-primary">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="text-white mb-4">Oficinas</h2>
            </div>
            <div class="col-lg-4">
                <div class="p-4 bg-white mb-3 rounded">
                    <span class="d-block text-black h6 text-uppercase">Tunja</span>

                </div>
            </div>
            <div class="col-lg-4">
                <div class="p-4 bg-white mb-3 rounded">
                    <span class="d-block text-black h6 text-uppercase">Duitama</span>

                </div>
            </div>
            <div class="col-lg-4">
                <div class="p-4 bg-white mb-3 rounded">
                    <span class="d-block text-black h6 text-uppercase">Sogamoso</span>

                </div>
            </div>
        </div>
    </div>

</div>


@section scripts{
    <script>
        function validacion() {
            var h = new Date(), d = h.getDate(), m = h.getMonth() + 1, a = h.getFullYear(), fechactual = a + "-" + m + "-" + d;
            var fecha = document.getElementById("fecha").value;
            if (fecha < fechactual) {
                document.getElementById("e").innerHTML = "La fecha debe ser superior a la fecha actual ";
                cumple = false;
            } else {
                document.getElementById("e").innerHTML = "";
            }

        }
    </script>
}

